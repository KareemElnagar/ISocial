<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ISocial" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
       <item name="colorPrimary">@color/pink_dark</item>
       <item name="colorPrimaryVariant">@color/pink_primary</item>
       <item name="colorOnPrimary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:statusBarColor">?attr/backgroundColor</item>
    </style>

    <style name="SingleLineText.Primary">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SingleLineText.Secondary">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/secondary_text_color_dark</item>
    </style>
</resources>