<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="90dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/add_story"
        android:layout_width="@dimen/story_size"
        android:layout_height="@dimen/story_size"
        android:layout_margin="@dimen/margin_small"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleImageView" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/add_story_plus"
        android:layout_width="16dp"
        android:layout_height="16dp"

        android:background="@color/add_story_plus"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/add_story"
        app:layout_constraintEnd_toEndOf="@+id/add_story"
        app:shapeAppearance="@style/circleImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>